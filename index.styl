@import vars
@import basic

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

#root
  margin: 20px

.widget
  border: 1px solid #999
  border-radius: 3px
  background: #fff
  box-shadow: 0 2px 3px rgba(0,0,0,0.2)

svg
  margin: auto

circle.anchor
  stroke: black
  fill: black

circle.ctrl
  stroke: black
  fill: white

circle
  cursor: move

g.active circle.anchor
  fill: red

line.ctrl
  stroke-dasharray: 2 2

.ldcp-panel.ldcp-picker .ldcp-functions 
  height: 10px
  overflow: hidden
  .ldcp-btn
    height: 10px
    &:after
      margin-top: -2px

#layers
  width: 90%
  margin: auto
  height: 600px
  padding: 10px
.layer
  width: 80%
  margin: auto
  height: 32px
  padding: 5px
  text-align: center
  cursor: pointer
  &.active
    box-shadow: 0 2px 3px rgba(255,192,0,0.5)
    border-color: rgba(192,128,0,1.0)
    background: rgba(255,240,0,0.2)
